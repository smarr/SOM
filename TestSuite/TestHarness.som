TestHarness = (

    tests = ( "Now ordered by alphabetical order to improve maintainability"
        ^ EmptyTest,
          SystemTest,
          ArrayTest,
          ClassLoadingTest,
          ClosureTest,
          CoercionTest,
          CompilerReturnTest,
          DoubleTest,
          HashTest,
          IntegerTest,
          ObjectSizeTest,
          ReflectionTest,
          SelfBlockTest,
          SuperTest,
          SymbolTest, 
          VectorTest,
          BlockTest,
          StringTest,
          ClassStructureTest,
          DoesNotUnderstandTest
    )
    
    suites = ( "List of more complex test suites" 
        ^ Array with: OmopTestSuite
    )
    
    run: args = (
        'Testing...' println.
        
        args length = 1
            ifTrue:  [ self runStandardTests ]
            ifFalse: [
                ('Running test ' + (args at: 2) + 'Test') println.
                (system resolve: ((args at: 2) + 'Test') asSymbol) new run: self ].
        
        '...done' println
    )
    
    runStandardTests = (
        PreliminaryTest new run: self.
        self suites do: [ :suite |
              ('Running suite ' + suite) println. suite new run.].
        self tests do:  [ :test |
              ('Running test ' + test) println. test new run: self ].
    )
    
    fail: who = (
        ('Test ' + who + ' failed!') println.
        system exit: 1
    )
    
    fail: who because: reason = (
        ('Test ' + who + ' failed: ' + reason) println.
        system exit: 1
    )
    
    warn: who = (
        ('Warning: Test ' + who + ' failed!') println.
    )
    
    warn: who because: reason = (
        ('Warning: Test ' + who + ' failed: ' + reason) println.
    )
    
)
